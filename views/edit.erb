<h1 class="header__title">メモ編集</h1>
<form action="/memos/<%= @memo['id'] %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <p class="memo-title">メモタイトル <br>
    <input type="text" name="title" value="<%= h(@memo['title'])%>">
  </p>
  <p class="memo-title">メモ内容 <br>
    <textarea name="message" rows="3" cols="30"><%= h(@memo['message'])%></textarea>
  </p>
  <button type="submit">変更</button>
</form>
